
@{
    ViewData["Title"] = "Track Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-5">
    <div class="container">
        <h2 class="text-center mb-4">Track Your Order</h2>

        <div class="card shadow-sm p-4 border-0">
            <!-- ✅ Order Info -->
            <div class="mb-4">
                <p><strong>Order ID:</strong> <span id="trackOrderId">#ORD12345</span></p>
                <p><strong>Estimated Delivery:</strong> <span id="trackDeliveryDate">2-4 days</span></p>
                <p><strong>Status:</strong> <span id="orderStatusText" class="text-primary fw-bold">Processing</span></p>
            </div>

            <!-- ✅ Progress Bar -->
            <div class="mb-4">
                <div class="progress" style="height: 30px;">
                    <div id="orderProgressBar" class="progress-bar progress-bar-striped progress-bar-animated bg-success"
                         role="progressbar" style="width: 20%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
                        Order Placed
                    </div>
                </div>
            </div>

            <!-- ✅ Status Steps -->
            <div class="d-flex justify-content-between mt-3">
                <small>Order Placed</small>
                <small>Processing</small>
                <small>Shipped</small>
                <small>Delivered</small>
            </div>

            <!-- ✅ Action -->
            <div class="mt-4 text-center">
                <button class="btn btn-primary" onclick="window.location.href='/'">Continue Shopping</button>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const statuses = ["Order Placed", "Processing", "Shipped", "Delivered"];
        let currentStep = 0;

        const progressBar = document.getElementById("orderProgressBar");
        const statusText = document.getElementById("orderStatusText");

        // ✅ Simulate status updates every 3 seconds
        const interval = setInterval(() => {
            if (currentStep < statuses.length) {
                let percentage = ((currentStep + 1) / statuses.length) * 100;
                progressBar.style.width = percentage + "%";
                progressBar.textContent = statuses[currentStep];
                statusText.textContent = statuses[currentStep];
                currentStep++;
            } else {
                clearInterval(interval);
            }
        }, 3000);
    });
</script>


