
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


        <!-- Main Content -->
        <div class="col-md-10 p-4">
            <h2 class="mb-4">Dashboard</h2>

            <!-- Cards Row -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card shadow-sm text-center">
                        <div class="card-body">
                            <h5>Total Users</h5>
                            <h3>@ViewBag.TotalUsers</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm text-center">
                        <div class="card-body">
                            <h5>Total Orders</h5>
                            <h3>@ViewBag.TotalOrders</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm text-center">
                        <div class="card-body">
                            <h5>Total Revenue</h5>
                            <h3>₹@ViewBag.TotalRevenue</h3>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Chart -->
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="mb-3">Sales Overview</h5>
                    <canvas id="salesChart" height="100"></canvas>
                </div>
            </div>

            <!-- Recent Orders Table -->
            <div class="card">
                <div class="card-body">
                    <h5 class="mb-3">Recent Orders</h5>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Customer</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.RecentOrders != null)
                            {
                                foreach (var order in ViewBag.RecentOrders)
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@order.CustomerName</td>
                                        <td>₹@order.TotalAmount</td>
                                        <td>
                                            <span class="badge @(order.Status == "Completed" ? "bg-success" : "bg-warning")">
                                                @order.Status
                                            </span>
                                        </td>
                                        <td>@order.Date</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">No recent orders found.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
</div>